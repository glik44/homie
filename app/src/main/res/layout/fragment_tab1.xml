<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.afeka.homie.tabs.Tab1">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Details" />



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Id:"
                android:textColor="#FFA700"/>

            <TextView
                android:id="@+id/id_tab_details"
                android:layout_weight="8"
                android:textColor="#FFFFFFFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="123"

                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Country:"
                android:textColor="#FFA700"
                />

            <TextView
                android:id="@+id/country_tab_details"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:textColor="#FFFFFFFF"
                android:layout_height="wrap_content"
                android:text="123"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView

                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Street:"
                android:textColor="#FFA700"/>

            <TextView
                android:id="@+id/street_tab_details"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:textColor="#FFFFFFFF"
                android:layout_height="wrap_content"
                android:text="123"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Product type::"
                android:textColor="#FFA700"/>

            <TextView
                android:id="@+id/prodcutType_tab_details"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:textColor="#FFFFFFFF"
                android:layout_height="wrap_content"
                android:text="123"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Price per month:"
                android:textColor="#FFA700"/>

            <TextView
                android:id="@+id/price_tab_details"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:textColor="#FFFFFFFF"
                android:layout_height="wrap_content"
                android:text="123"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="coordinate:"
                android:textColor="#FFA700"/>

            <TextView
                android:id="@+id/latx_tab_details"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:textColor="#FFFFFFFF"
                android:layout_height="wrap_content"
                android:text="123"
                />

            <TextView
                android:id="@+id/laty_tab_details"
                android:layout_weight="2"
                android:textColor="#FFFFFFFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="123"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ImageViewURL:"
                android:textColor="#FFA700"/>

            <TextView
                android:id="@+id/imgURL_tab_details"
                android:layout_weight="2"
                android:textColor="#FFFFFFFF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="123"
                />

        </LinearLayout>




    </LinearLayout>

</LinearLayout>
